						, ["gołąbia"  , "gołąbi"   ]
						, ["gołąbiowi", "gołąbiom" ]
						, ["gołąbia"  , "{=N}"   ]
						, ["gołąbiem" , "gołąbiami"]
						, ["gołąbiu"  , "gołąbiach"]
						, ["{=L}"   , "{=N}"   ]
						])
					+table("dog",
						[ ["pies"  , "psy"   ]
						, ["psa"   , "psów"  ]
						, ["psu"   , "psom"  ]
						, ["{=N}", "{=N}"]
						, ["psem"  , "psami" ]
						, ["psie"  , "psach" ]
						, ["{=L}", "{=N}"]
						])

					+table("cat",
						[ ["kot"   , "koty"  ]
						, ["kota"  , "kotów" ]
						, ["kotu"  , "kotom" ]
						, ["kota"  , "{=N}"]
						, ["kotem" , "kotami"]
						, ["kocie" , "kotach"]
						, ["{=L}", "{=N}"]
						])
					+table("day",
						[ ["dzień" , "dni"   ]
						, ["dnia"  , "dni"   ]
						, ["dniowi", "dniom" ]
						, ["dzień" , "{=N}"  ]
						, ["dniem" , "dniami"]
						, ["dniu"  , "dniach"]
						, ["{=L}"  , "{=N}"  ]
						])
					+table("day",
						[ ["tydzień"  , "tygodnie"  ]
						, ["tygodnia" , "tygodni"   ]
						, ["tygodniu" , "tygodniom" ]
						, ["tydzień"  , "{=N}"      ]
						, ["tygodniem", "tygodniami"]
						, ["tygodniu" , "tygodniach"]
						, ["{=L}"     , "{=N}"      ]
						])
				+section("masculin personal").tables
					+table("student",
						[ ["student"    , "studenci"  ]
						, ["studenta"   , "studentów" ]
						, ["studentowi" , "studentom" ]
