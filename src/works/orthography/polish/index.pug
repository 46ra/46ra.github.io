						, ["religią" , "religiami"]
						, ["{=D}"    , "religiach"]
						, ["religio" , "{=N}"   ]
						])
			+section("neuter")
				div.tables
					+table("town",
						[ ["miasto" , "miasta"  ]
						, ["miasta" , "miast"   ]
						, ["miastu" , "miastom" ]
						, ["{=N}" , "{=N}"  ]
						, ["miastem", "miastami"]
						, ["miaście", "miastach"]
						, ["{=N}" , "{=N}"  ]
						])
					+table("opinion",
						[ ["zdanie" , "zdania"  ]
						, ["zdania" , "zdań"    ]
						, ["zdaniu" , "zdaniom" ]
						, ["{=N}" , "{=N}"  ]
						, ["zdaniem", "zdaniami"]
						, ["zdaniu" , "zdaniach"]
						, ["{=N}" , "{=N}"  ]
						])
					+table("animal",
						[ ["zwierzę"   , "zwierzęta"  ]
						, ["zwierzęcia", "zwierząt"   ]
						, ["zwierzęciu", "zwierzętom" ]
						, ["{=N}"      , "{=N}"       ]
						, ["zwierzęiem", "zwierzętami"]
						, ["zwierzęciu", "zwierzętach"]
						, ["{=N}"      , "{=N}"       ]
						])
					+table("given name",
						[ ["imię"    , "imiona"  ]
						, ["imienia" , "imion"   ]
						, ["imieniu" , "imionom" ]
						, ["{=N}"    , "{=N}"    ]
						, ["imieniem", "imionami"]
						, ["imieniu" , "imionach"]
						, ["{=N}"    , "{=N}"    ]
						])
			+section("pronoun").tables
				mixin table(ys, xss)
					table.nu
						tr
							for y in ys
								th= y
						for xs, i in xss
							tr
								th= "N G D A I L".split(" ")[i]
								for x in xs
									td= x

				+table("|what|who|nothing|no one|i|thou|he|it|she|thou m.|ye m.|thou f.|ye f.|ye mixed|we|ye|they|they|self".split("|"),
					[ "co    kto  nic     nikt   ja   ty     on   ono  ona  pan   panowie pani  panie   państwo  my   wy   oni one "
					, "czego kogo niczego nikogo mnie cię    go   go   jej  pana  panów   pani  pań     państwa  nas  was  ich  ich  sie"
					, "czemu komu niczem  nikomu mi   ci     mu   mu   jej  panu  panom   pani  paniom  państwu  nam  wam  im   im   sobie"
					, "{=N}  {=G} {=N}    {=N}   {=G} {=G}   {=G} je   ją   {=G}  {=G}    panią panie   {=G}     {=G} {=G} ich  je   {=G}"
					, "czym  kim  niczym  nikim  mną  tobą   nim  nim  nią  panem panami  panią paniami państwem nami wami nimi nimi sobą"
					, "{=I}  {=I} {=I}    {=I}   mnie tobie  {=I} {=I} niej panu  panach  pani  paniach państwu  {=G} {=G} nich nich sobie"
					].map(tds => tds.split(/ +/)))


	+section("vocabulary")
		table.add-new
			tr
				th meaning
				th trad.
				th lat.
				th cyr.
			+trs(
				[ "north północ"
				, "east  wschód"
				, "south południe"
				, "west  zachód"
				].map(tds => tds.split(/ +/)))