						, ["rzeką" , "rzekami"]
						, ["{=D}"  , "rzekach"]
						, ["rzeko" , "{=N}"   ]
						])
					+table("night",
						[ ["noc" , "noce"  ]
						, ["nocy", "nocy"  ]
						, ["nocy", "nocom" ]
