						, ["bratem", "braćmi" ]
						, ["bracie", "bratach"]
						, ["{=L}"  , "{=N}"   ]
						])
					+table("man",
						[ ["człowiek"    , "ludzie"  ]
						, ["człowieka"   , "ludzi"   ]
						, ["człowiekowi" , "ludziom" ]
						, ["{=G}"      , "{=G}"  ]
						, ["człowiekiem" , "ludźmi"  ]
						, ["człowieku"   , "ludziach"]
						, ["{=L}"      , "{=N}"  ]
						])
				+section("feminine").tables
					+table("woman",
						[ ["kobieta" , "kobiety"   ]
						, ["kobiety" , "kobiet"   ]
						, ["kobiecie", "kobietom" ]
						, ["kobietę" , "{=N}"   ]
						, ["kobietą" , "kobietami"]
						, ["{=D}"    , "kobietach"]
						, ["kobieto" , "{=N}"   ]
						])

					+table("street",
						[ ["ulica" , "ulice"  ]
						, ["ulicy" , "ulic"   ]
						, ["ulicy" , "ulicom" ]
						, ["ulicę" , "{=N}"   ]
						, ["ulicą" , "ulicami"]
						, ["{=D}"  , "ulicach"]
						, ["ulico" , "{=N}"   ]
						])
					+table("leg",
						[ ["noga"  , "nogi"  ]
						, ["nogi"  , "nóg"   ]
						, ["nodze" , "nogom" ]
						, ["nogę"  , "{=N}"  ]
						, ["nogą"  , "nogami"]
						, ["{=D}"  , "nogach"]
						, ["nogo"  , "{=N}"  ]
						])
					+table("arm",
						[ ["ręka" , "ręce"  ]
						, ["ręki" , "rąk"   ]
						, ["ręce" , "rękom" ]
