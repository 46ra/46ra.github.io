doctype html

include /_mixins.pug

-
  const root = "https://sumi.space"
  const author =
    { id: "ſumı"
    , name:
      { han: ["墨", "幽"]
      , ja: ["sumi|mok", "kura|iu"]
      , yue: ["mək", "qȷə̀v"]
      }
    , twitter: "smiqy"
    , github: "xekri"
    }

  const toYearDay = date => {
    const y = date.getFullYear()
    const d = (
      new Date(y, date.getMonth(), date.getDate()).getTime()
      - new Date(y, 0, 1).getTime()
    ) / (1000 * 60 * 60 * 24)
    return [y, d]
  }

  const now = toYearDay(new Date()).join("/")

html
  head
    include _google-analytics.pug
    meta(charset="UTF-8")

    style.
      @import url('https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap');
      @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC&display=swap');

    link(href="/style.css", rel="stylesheet")
    script(src="/script.js")

    // local files
    link(href="style.css", rel="stylesheet")
    script(src="script.js")

    link(rel="icon", href="/images/icon.ico")

    block head

    -
      const titleFull =
        isRoot
          ? author.id
          : `${author.id} / ${title}`
    title= titleFull

    script.
      document.addEventListener("DOMContentLoaded", () => {
        for(const e of document.querySelectorAll(".undot")) {
          e.innerHTML = e.innerHTML.replace(/i/g, "ı").replace(/j/g, "ȷ")
        }
      })

    meta(name="twitter:site", content="@" + author.twitter)
    meta(name="twitter:title", content=titleFull)
    // meta(name="twitter:description", content=`${author.id}'s information.`)
    meta(name="twitter:image", content=`${root}/character/suzuri/images/2019-04-23.png`)
    meta(name="twitter:card", content="summary")

  body
    #nav-switch
    .center
      nav
        #nav-in
          div#logo
            a(href="/")
              //img(src="/images/sumi.png")
          #datetime
          +div("menu")
            ul
              li: a.undot(href="/") /
              li: a.undot(href="/author") auþor
              li: a.undot(href="/character") character
              li: a.undot(href="/fav") favorite
              // li: a(href="/thought") thought
              li: a.undot(href="/work") work
              li: a.undot(href="/misc") misc

            +div("submenu")

          center
            a(
              href="https://twitter.com/share?ref_src=twsrc%5Etfw"
              , class="twitter-share-button"
              , data-show-count="true"
              , data-via=author.twitter
            ) Tweet
            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

    main
      article
        p.undot ⚠ þis website {use google analytics, not be mobile}.

        +section(title, tags)
          block main

