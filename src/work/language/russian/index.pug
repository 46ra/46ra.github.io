extend /_layout.pug

block head
	- const title = "russian"

block main
	center
		div
			input.trigger#uppercase(type="checkbox", name="uppercase")
			label uppercase

		div
			textarea.trigger#source.
				# inner universe
				Ангелы и демоны кружили надо мной
				Рассекали тернии и млечные пути
				Не знает счастья только тот,
				Кто его зова понять не смог …

				# rise
				I'm a soldier, значит я
				И ответчик и судья
				Я стою на двух концах огня
				Огибая виражи, обгоняя смерть и жизнь
				Я бегу сразиться с тенью лжи
				Сколько б нитей не плёл обман
				Покажет лик света истина

			//
				# Всеобщая декларация прав человека

				## Статья 1
				Все люди рождаются свободными и равными в своем достоинстве и правах. Они наделены разумом и совестью и должны поступать в отношении друг друга в духе братства.

				## Статья 2
				Каждый человек должен обладать всеми правами и всеми свободами, провозглашенными настоящей Декларацией, без какого бы то ни было различия, как-то в отношении расы, цвета кожи, пола, языка, религии, политических или иных убеждений, национального или социального происхождения, имущественного, сословного или иного положения.
				Кроме того, не должно проводиться никакого различия на основе политического, правового или международного статуса страны или территории, к которой человек принадлежит, независимо от того, является ли эта территория независимой, подопечной, несамоуправляющейся или как-либо иначе ограниченной в своем суверенитете.
			textarea#sink-cyr
			textarea#sink
			div: a#tweet tweet

		//table.transpose.add-new
			tr
				th trad.
				th new
			+trs(
				[ "ы"
				, "э"
				, "а"
				, "о"
				, "у"
				, "и"
				, "е"
				, "я"
				, "ё"
				, "ю"

				, "ь"
				, "ъ"

				, "й"

				, "п"
				, "б"
				, "ф"
				, "в"
				, "м"

				, "т"
				, "д"
				, "с"
				, "з"
				, "ц"
				, "н"
				, "л"
				, "р"

				, "ч"
				, "ш"
				, "ж"

				, "щ"

				, "к"
				, "г"
				, "х"
				].map(td => [td]))

	+section("inflection")
		figure: table.transpose
			caption abbreviation
			+thTrs(
				[ "m masculine"
				, "n neuter"
				, "f feminine"
				, "s singular"
				, "p plural"
				, "a animte"
				, "i inanimate"
				].map(s => s.split(" ")))

		mixin table(w, xs, ys, zss)
			table.add-nu
				caption= w
				tbody
					tr
						th
						for x in xs
							th= x
					for zs, i in zss
						tr
							th= ys[i]
							for z in zs
								td= z

		mixin tableI(w, xs, zss)
			+table(w, xs, "NAGDIP", zss)

		mixin tableN(w, zss)
			+tableI(w, ["s", "p"], zss)
		mixin tableA(w, zss)
			+tableI(w, ["m", "n", "f", "p"], zss)

		+section("declension")
			+section("first")
				div.tables
					+tableN("work, f",
						[ ["рабо́та", "рабо́ты"]
						, ["рабо́ты", "!{N}"]
						, ["рабо́те", "рабо́т"]
						, ["рабо́ту", "рабо́там"]
						, ["рабо́той", "рабо́тами"]
						, ["рабо́те", "рабо́тах"]
						])
					+tableN("bathhouse, f",
						[ ["ба́ня", "ба́ни"]
						, ["ба́ни", "!{N}"]
						, ["ба́не", "ба́нь"]
						, ["ба́ню", "ба́ням"]
						, ["ба́ней", "ба́нями"]
						, ["ба́не", "ба́нях"]
						])
					+tableN("book, f",
						[ ["кни́га", "кни́ги"]
						, ["кни́гу", "!{N}"]
						, ["кни́ги", "книг"]
						, ["кни́ге", "кни́гам"]
						, ["кни́гой", "кни́гами"]
						, ["кни́ге", "кни́гах"]
						])
					+tableN("line, f",
						[ ["ли́ния", "ли́нии"]
						, ["ли́нию", "!{N}"]
						, ["ли́нии", "ли́ний"]
						, ["!{G}", "ли́ниям"]
						, ["ли́нией", "ли́ниями"]
						, ["ли́нии", "ли́ниях"]
						])
			+section("second")
				.tables
					+tableN("film, m",
						[ ["фи́льм", "фи́льмы"]
						, ["!{N}", "!{N}"]
						, ["фи́льма", "фи́льмов"]
						, ["фи́льму", "фи́льмам"]
						, ["фи́льмом", "фи́льмам"]
						, ["фи́льме", "фи́льма́х"]
						])
					+tableN("writer, m",
						[ ["писа́тель", "писа́тели"]
						, ["!{G}", "!{G}"]
						, ["писа́теля", "писа́телей"]
						, ["писа́телю", "писа́телям"]
						, ["писа́телем", "писа́телями"]
						, ["писа́теле", "писа́телях"]
						])
					+tableN("hero, m",
						[ ["геро́й", "геро́йи"]
						, ["!{G}", "!{G}"]
						, ["геро́я", "геро́ев"]
						, ["геро́ю", "геро́ям"]
						, ["геро́йем", "геро́ями"]
						, ["геро́йе", "геро́ях"]
						])
					+tableN("comment, m",
						[ ["коммента́рий", "коммента́рии"]
						, ["!{N}", "!{N}"]
						, ["коммента́рия", "коммента́риев"]
						, ["коммента́рию", "коммента́риям"]
						, ["коммента́рием", "коммента́риями"]
						, ["коммента́рии", "коммента́риях"]
						])

					+tableN("place, n",
						[ ["ме́сто", "места́"]
						, ["!{N}", "!{N}"]
						, ["ме́ста", "мест"]
						, ["ме́сту", "места́м"]
						, ["ме́стом", "места́ми"]
						, ["ме́сте", "места́х"]
						])
					+tableN("sea, n",
						[ ["мо́ре", "моря́"]
						, ["!{N}", "!{N}"]
						, ["мо́ря", "море́й"]
						, ["мо́рю", "моря́м"]
						, ["мо́рем", "моря́ми"]
						, ["мо́ре", "моря́х"]
						])
					+tableN("building, n",
						[ ["зда́ние", "зда́ния"]
						, ["!{N}", "!{N}"]
						, ["зда́ния", "зда́ний"]
						, ["зда́нию", "зда́ниям"]
						, ["зда́нием", "зда́ниями"]
						, ["зда́нии", "зда́ниях"]
						])
			+section("third")
				div.tables
					+tableN("bone, f",
						[ ["ко́сть", "ко́сти"]
						, ["!{N}", "!{N}"]
						, ["ко́сти", "косте́й"]
						, ["!{G}", "костя́м"]
						, ["ко́стью", "костя́ми"]
						, ["ко́сти", "костя́х"]
						])
					+tableN("mouse, f",
						[ ["мы́шь", "мы́ши"]
						, ["!{N}", "!{A}"]
						, ["мы́ши", "мыше́й"]
						, ["!{G}", "мыша́м"]
						, ["мы́шью", "мыша́ми"]
						, ["мы́ши", "мыша́х"]
						])
					+tableN("name, n",
						[ ["и́мя", "имена́"]
						, ["!{N}", "!{N}"]
						, ["и́мени", "имён"]
						, ["!{G}", "имена́м"]
						, ["и́менем", "имена́ми"]
						, ["и́мени", "имена́х"]
						])
			+section("adjective")
				.tables
					+tableA("new",
						[ ["но́вый", "но́вое", "но́вая", "но́вые"]
						, ["!{N, G}", "!{N}", "но́вую", "!{N, G}"]
						, ["но́вого", "!{m}", "но́вой", "но́вых"]
						, ["но́вому", "!{m}", "!{G}", "но́вым"]
						, ["но́вым", "!{m}", "!{G}", "но́выми"]
						, ["но́вом", "!{m}", "!{G}", "но́вых"]
						])
					+tableA("blue",
						[ ["высо́кий", "высо́кое", "высо́кая", "высо́кие"]
						, ["!{N, G}", "!{N}", "высо́кую", "!{N, G}"]
						, ["высо́кого", "!{m}", "высо́кой", "высо́ких"]
						, ["высо́кому", "!{m}", "!{G}", "высо́ким"]
						, ["высо́ким", "!{m}", "!{G}", "высо́кими"]
						, ["высо́ком", "!{m}", "!{G}", "высо́ких"]
						])
					+tableA("good",
						[ ["хоро́ший", "хоро́шее", "хоро́шая", "хоро́шие"]
						, ["!{N, G}", "!{N}", "хоро́шую", "!{N, G}"]
						, ["хоро́шего", "!{m}", "хоро́шей", "хоро́ших"]
						, ["хоро́шему", "!{m}", "!{G}", "хоро́шим"]
						, ["хоро́шим", "!{m}", "!{G}", "хоро́шими"]
						, ["хоро́шем", "!{m}", "!{G}", "хоро́ших"]
						])
					+tableA("big",
						[ ["большо́й", "большо́е", "больша́я", "больши́е"]
						, ["!{N, G}", "!{N}", "большу́ю", "!{N, G}"]
						, ["большо́го", "!{m}", "большо́й", "больши́х"]
						, ["большо́му", "!{m}", "!{G}", "больши́м"]
						, ["больши́м", "!{m}", "!{G}", "больши́ми"]
						, ["большо́м", "!{m}", "!{G}", "больши́х"]
						])
		+section("pronoun")
			.tables
				table.nu-table
					caption personal
					tr
						th(rowspan="3")
						th(colspan="5") s
						th(colspan="3") p
						th(rowspan="3") refl
					tr
						th(rowspan="2") 1
						th(rowspan="2") 2
						th(colspan="3") 3
						th(rowspan="2") 1
						th(rowspan="2") 2
						th(rowspan="2") 3
					tr
						th m
						th n
						th f
					tr
						th N
						td я
						td ты
						td он
						td оно́
						td она́
						td мы
						td вы
						td они́
						td сам
					tr
						th A, G
						td меня́
						td тебя́
						td(colspan="2") его́
						td её
						td нас
						td вас
						td их
						td себя́
					tr
						th D
						td мне
						td тебе́
						td(colspan="2") ему́
						td ей
						td нам
						td вам
						td им
						td себе́
					tr
						th I
						td мной
						td тобо́й
						td(colspan="2") им
						td ей
						td на́ми
						td ва́ми
						td и́ми
						td собо́й
					tr
						th P
						td мне
						td тебе́
						td(colspan="2") нём
						td ней
						td нас
						td вас
						td них
						td себе́
			+section("demonstrative")
				.tables
					table.nu-table
						caption this
						tr
							th
							th m
							th n
							th f
							th p
						tr
							th N
							td э́тот
							td(rowspan="2") э́то
							td э́та
							td э́ти
						tr
							th A
							td= "!{N, G}"
							td э́ту
							td= "!{N, G}"
						tr
							th G
							td(colspan="2") э́того
							td(rowspan="4") э́той
							td э́тих
						tr
							th D
							td(colspan="2") э́тому
							td э́тим
						tr
							th I
							td(colspan="2") э́тим
							td э́тими
						tr
							th P
							td(colspan="2") э́том
							td э́тих
					table.nu-table
						caption that
						tr
							th
							th m
							th n
							th f
							th p
						tr
							th N
							td этот
							td(rowspan="2") то
							td эта
							td те
						tr
							th A
							td= "!{N, G}"
							td ту
							td= "!{N, G}"
						tr
							th G
							td(colspan="2") того
							td(rowspan="4") той
							td тех
						tr
							th D
							td(colspan="2") тому
							td тем
						tr
							th I
							td(colspan="2") тем
							td теми
						tr
							th P
							td(colspan="2") том
							td тех
			+section("posessive")
			+section("interrogative")
				.tables
					+tableI("who, what", ["a", "i"],
						[ ["кто", "что"]
						, ["!{G}", "!{N}"]
						, ["кого́", "чего́"]
						, ["кому́", "чему́"]
						, ["кем", "чем"]
						, ["ком", "чём"]
						])
					table.nu-table
						caption whose
						tr
							+ths(["", "m", "n", "f", "p"])
						tr
							th N
							td чей
							td(rowspan="2") чьё
							td чья
							td чьи
						tr
							th A
							td= "!{N, G}"
							td чью
							td= "!{N}", "чью"
						tr
							th G
							td(colspan="2") чьего́
							td(rowspan="4") чьей
							td чьих
						tr
							th D
							td(colspan="2") чьему́
							td чьим
						tr
							th I
							td(colspan="2") чьим
							td чьи́ми
						tr
							th P
							td(colspan="2") чьём
							td чьём